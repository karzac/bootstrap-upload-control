<div class="fileinput input-group fileinput-exists" data-provides="fileinput">
    <div class="form-control" data-trigger="fileinput">
        <i class="glyphicon glyphicon-file fileinput-exists"></i>
        <span class="fileinput-filename">{$path|substr:0,27}</span>
    </div>
    <span class="input-group-addon btn btn-default btn-file">
        <span class="fileinput-new">Vybrat soubor</span>
        <span class="fileinput-exists">ZmÄ›nit</span>
        <input type="hidden" name="{$removedName}" class="remove" value="0">
        <input type="hidden" name="{$pathName}" value="{$path}">
        {$input}
    </span>
    <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">Smazat</a>
</div>